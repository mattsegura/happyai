# ============================================
# SUPABASE CONFIGURATION
# ============================================
# TODO: Replace with YOUR production Supabase credentials
VITE_SUPABASE_URL=https://YOUR-PROD-PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key-here
SUPABASE_SERVICE_KEY=your-production-service-role-key-here

# ============================================
# MOCK MODE TOGGLES (Keep TRUE for now)
# ============================================
# These allow the app to work WITHOUT real API credentials

# Canvas Mock Mode - Use fake Canvas data
VITE_USE_CANVAS_MOCK=true

# Academics Mock Mode - Use fake grades/assignments
VITE_USE_ACADEMICS_MOCK=true

# Payment Mock Mode - Simulate Stripe payments
VITE_USE_PAYMENT_MOCK=true

# AI Mock Mode - Simulate AI responses
VITE_USE_MOCK_AI=true

# ============================================
# CANVAS LMS (Not needed in mock mode)
# ============================================
# Leave commented until you get real Canvas credentials
# VITE_CANVAS_CLIENT_ID=your-canvas-client-id
